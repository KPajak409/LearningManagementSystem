<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="../css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="../css/style.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid h-100 p-0" id="#map">
        <div class="row">
            <nav class="navbar navbar-expand navbar-dark bg-dark">
                <a class="navbar-brand ms-4" href="#">LMS</a>
            <div class="collapse navbar-collapse d-sm-flex flex-row-reverse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a  class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
                    </li>
                    <li class="nav-item me-4">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
                            <button  type="submit" class="nav-link btn btn-link text-light">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
            </nav>
        </div>
        <div class="row">
            <div class="col-xl-1 col-md-2 d-flex flex-column pe-0">
                <nav class="navbar navbar-light bg-light border d-flex flex-column" style="height: 100%;">
                      <div class="navbar-nav d-flex justify-content-evenly" style="height: 100%;">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                        <a class="nav-link" href="#">Dashboard</a>
                        <a class="nav-link" href="#">Courses</a>
                        <a class="nav-link" href="#">Users</a>          
                        <a class="nav-link disabled">Disabled</a>
                      </div>
                </nav>
            </div>
            <div class="col ps-0">
                <main role="main" class="course-section">
                    @RenderBody()
                </main>
            </div>   
        </div>
            <div class="row">
                <footer class="border-top footer text-muted">
                    <div class="container">
                        &copy; 2022 - LMS - <a asp-area="" asp-page="/Privacy">Privacy</a>
                    </div>
                </footer>
            </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

