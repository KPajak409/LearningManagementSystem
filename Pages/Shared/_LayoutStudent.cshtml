<!DOCTYPE HTML>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_LayoutStudentHome</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="../css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="../css/style.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid h-100 p-0" id="#map">
        <div class="row">
            <nav class="navbar navbar-expand-lg justify-content-between navbar-dark bg-dark">
                <a class="navbar-brand ms-4" asp-page="../Student/Index" >LMS</a>
                <div>
                     <a class="navbar-brand ms-4" asp-page="../Student/Index" >My Courses</a>
                <a class="navbar-brand ms-4" asp-page="../Student/TaskList">Tasks</a>
                <a class="navbar-brand ms-4" asp-page="../Student/CourseList" >Sign up to course</a>
                </div>
               
           
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a  class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
                    </li>
                    <li class="nav-item me-4">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
                            <button  type="submit" class="nav-link btn btn-link text-light">Logout</button>
                        </form>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="row" style="height: 85vh">
           <div class="col ps-0 second-row scrollable">
                <main role="main" class="course-section p-2" >
                    @RenderBody()  
                </main>
            </div>   
        </div>
         <div class="row">
                <footer class="border-top footer text-muted">
                    <div class="container">
                        &copy; 2022 - LMS - <a asp-area="" asp-page="/Privacy">Privacy</a>
                    </div>
                </footer>
         </div>
    </div>

     <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
</body>
</html>