@model LMS.Data.Question

 <form method="post" >
        <div class="form-group">
             <label class="control-label">Question content</label>
             <input asp-for="Content" class="form-control" />
             <span asp-validation-for="Content" class="text-danger"></span>
             <input type="hidden" id="total" value="0" />
        </div>
        
            @for(int i = 0; i<Model.Answers.Count;i++)
            {
             <div class="answer form-group">
                 <label class="control-label">Answer content</label>
                 <input asp-for="Answers[i].Content" class="form-control" />
                 <span asp-validation-for="Answers[i].Content" class="text-danger"></span>
             </div>
             <div class="form-group">
                 <input type="radio" asp-for="Answers[i].IsCorrect">Is Correct
             </div>
            }
        
        <input type="submit" class="btn btn-primary" />
</form>
