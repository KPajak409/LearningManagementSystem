@page
@model LMS.Pages.Activities.UserResponseDetailsModel

@{
    ViewData["Title"] = "UserResponseDetails";
}

<h1>User response details</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityUserResponse.Response)
        </dt>
        <dd class="col-sm-10">
             <div class="user-response-text border p-1">
                        @Html.Raw(Model.ActivityUserResponse.Response)
             </div>
        </dd>
        <dt class="col-sm-2">
            Included files:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityUserResponse.ResponseFileNames)
        </dd>
        <dt class="col-sm-2">
            Earned Points
        </dt>
        <dd class="col-sm-10">
            @if(Model.ActivityUserResponse.EarnedPoints == null)
            {
                <span>0/</span>@Html.DisplayFor(model => model.Activity.Points)
            }
            else
            {
                @Html.DisplayFor(model => model.ActivityUserResponse.EarnedPoints)
                <span>/</span>
                @Html.DisplayFor(model => model.Activity.Points)
            }
            
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityUserResponse.Comment)
        </dt>
        <dd class="col-sm-10">
            <div class="user-comment-text border p-1"
            @Html.DisplayFor(model => model.ActivityUserResponse.Comment)
            </div>
        </dd>
    </dl>
    <form method="post">
         <div class="form-group">
            <input type="hidden" asp-for="ActivityUserResponse.ActivityId" />
            <input type="hidden" asp-for="ActivityUserResponse.Id" />
            <input type="hidden" asp-for="ActivityUserResponse.ResponseFileNames" /> 
            <input type="hidden" asp-for="ActivityUserResponse.Response" />
            <input type="hidden" asp-for="ActivityUserResponse.User" /> 
        </div>        
        <div class="form-group">
            <label asp-for="ActivityUserResponse.Comment" class="control-label"></label>
            <input asp-for="ActivityUserResponse.Comment" class="form-control" />
            <span asp-validation-for="ActivityUserResponse.Comment" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Points</label>
            <input type="number" min="0" max="@Model.Activity.Points" asp-for="ActivityUserResponse.EarnedPoints" class="form-control" />
            <span asp-validation-for="ActivityUserResponse.EarnedPoints" class="text-danger"></span>
            
        </div>
        <div class="form-group">
                <input type="submit" value="Grade" class="btn btn-primary mt-2 mb-2" />
            </div>
    </form>
</div>
<div>
    <a href='javascript:history.go(-1)'>Back to list</a>
</div>
