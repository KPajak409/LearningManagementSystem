@page
@model LMS.Pages.Sections.DeleteSectionModel

@{
    ViewData["Title"] = "DeleteSection";
}

<h1>DeleteSection</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="text-danger fs-3">@Model.Error</div>
<div>
    <h4>Section</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Section.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Section.Position)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Section.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Section.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Section.Course)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Section.CourseId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Section.Id"/>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary m-2" asp-page="../Courses/CourseEditMode" asp-route-id="@Model.Section.CourseId">Back to course</a>
    </form>
</div>
