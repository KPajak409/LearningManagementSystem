@page
@model LMS.Pages.Users.CreateUserModel
@{
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create user account</title>
</head>
<body>

<h4>Create user account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if(Model.Error != null)
            {
                <p class="text-danger">@Model.Error</p>
            }
            <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <div class="form-group">
                <label asp-for="UserEntity.Email" class="control-label">E-mail</label>
                <input asp-for="UserEntity.Email" class="form-control" />
                <span asp-validation-for="UserEntity.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserEntity.FirstName" class="control-label">First name</label>
                <input asp-for="UserEntity.FirstName" class="form-control" />
                <span asp-validation-for="UserEntity.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserEntity.LastName" class="control-label">Last name</label>
                <input asp-for="UserEntity.LastName" class="form-control" />
                <span asp-validation-for="UserEntity.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="SelectedRole" asp-items="Model.SelectListItems"></select>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2 mb-2" />
            </div>
        </form>
        <span>@ViewData["Message"]</span>
        <div>
            <a href='javascript:history.go(-1)'>Back to list</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>