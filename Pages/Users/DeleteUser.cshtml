@model LMS.Pages.Users.DeleteUserModel
@{
}

@{
    ViewData["Title"] = "DeleteUser";
}

<h1>DeleteUser</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
         @if(Model.Error != null)
            {
                <p class="text-danger">@Model.Error</p>
            }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserEntity.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserEntity.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserEntity.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserEntity.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserEntity.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserEntity.LastName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="UserEntity.Id"/>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href='javascript:history.go(-1)'>Back to course</a>
    </form>
</div>