@page
@model LoginModel
@{}

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row col-md-6 ">
    <div>
        <section>
            <form id="account" method="post">           
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating pb-2">
                    <input asp-for="Input.Email" class="form-control bg-secondary" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label text-light"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control bg-secondary" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label text-light"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label text-light">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-between align-items-center">
                    <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" style="color: antiquewhite;">Forgot your password?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" style="color: antiquewhite;">Resend email confirmation</a>
                    </p>
                </div>
                </div>
                
            </form>
        </section>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
